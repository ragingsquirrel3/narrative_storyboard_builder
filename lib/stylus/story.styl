brandOrange = #EA5F25
brandGray = #8A8A8A
lightGray = #949494
lightestGray = #F1F1F1



drop-shadow(n)
  -moz-box-shadow n
  -webkit-box-shadow n
  box-shadow n
  
border-radius(n)
  -moz-border-radius: n
  border-radius: n
  
bottom-border()
  border-bottom: 1px dotted black
  
sprite()
  background-image:url('/images/sprites.png')
  background-repeat: no-repeat

.article
  width: 100%
  position: relative
  top: 130px
  
.header .title
  width: 100%
  height: 15%
  border-bottom: 5px solid brandGray
  
.article-title
  bottom-border()
  h1
    color: black
  .credit
    color: lightGray
  .date
    font-style: italic

.content
  width: 100%
  height: 85%
  position: relative

.sidebar, .illustration
  display: inline-block
  vertical-align: top
  height: 100%
  
.sidebar
  width: 30%
  position: relative
  
.chapter
  border-bottom: 1px dotted brandGray
  padding: 1em
  background-color: lightestGray
  h1
    margin: 0
  p
    font-size: 12px
  &.active
    background-color: white
    h1
      color: brandOrange

.arrows
  position: absolute
  right: 0
    
.arrow
  width: 27px
  height: 27px
  display: inline-block
  sprite()
  background-position-x: -10px
  margin: 1em 0.5em 0 0
  &:hover
    opacity: 0.8
  &.prev
    background-position-y: -10px
  &.next
    background-position-y: -50px
  &.disabled
    background-position-x: -50px
    &:hover
      opacity: 1
  
.illustration
  width: 70%
  position: relative
  drop-shadow(-10px -5px 14px -9px brandGray)
  
#vis
  height: 400px
  margin: 1em
  
.extended-content
  width: 100%
  margin: 1em

.show-zone
  text-align: right
  p
    display: inline-block
    margin-right: 1em
    a
      text-decoration: none
      color: lightGray
      &:hover
        text-decoration: underline

.show-data-icon
  width: 23px
  height: 28px
  display: inline-block
  sprite()
  background-position: -10px -90px
  &:hover
    opacity: 0.8
  
.footer
  width: 100%
  border-top: 2px dotted black
  p
    margin: 1em
  background-image: linear-gradient(bottom, rgb(255,255,255) 0%, rgb(235,235,235) 51%)
  background-image: -o-linear-gradient(bottom, rgb(255,255,255) 0%, rgb(235,235,235) 51%)
  background-image: -moz-linear-gradient(bottom, rgb(255,255,255) 0%, rgb(235,235,235) 51%)
  background-image: -webkit-linear-gradient(bottom, rgb(255,255,255) 0%, rgb(235,235,235) 51%)
  background-image: -ms-linear-gradient(bottom, rgb(255,255,255) 0%, rgb(235,235,235) 51%)
